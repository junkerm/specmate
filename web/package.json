{
    "name": "specmate",
    "version": "0.0.1",
    "description": "Specmate for co-engineering requirements and tests",
    "scripts": {
        "extract": "ngx-translate-extract -i ./src -o ./src/assets/i18n/de.json ./src/assets/i18n/gb.json -m ngx_trans_extr --sort --format namespaced-json",
        "lint": "tslint ./src/**/*.ts -t verbose --exclude './src/app/model/**/*.ts'",
        "clean": "rimraf ../bundles/specmate-ui-core/webcontent/*",
        "pack-dev": "webpack --config webpack/webpack.dev.js",
        "pack-prod": "webpack --config webpack/webpack.prod.js",
        "build-dev": "npm run extract && npm run lint && npm run clean && npm run pack-dev",
        "build-prod": "npm run clean && npm run pack-prod",
        "dep-graph": "ngd -p src/tsconfig.json",
        "init": "npm prune && npm install",
        "license-check": "license-checker --summary --production",
        "update-check": "ncu",
        "check": "npm run lint && npm run license-check && npm run update-check",
        "update-dependencies": "ncu -u && npm run init"
    },
    "keywords": [],
    "author": "Technical University of Munich - Maximilian Junker and Sebastian Eder",
    "license": "Apache-2.0",
    "dependencies": {
        "@angular/common": "5.2.2",
        "@angular/compiler": "5.2.2",
        "@angular/core": "5.2.2",
        "@angular/forms": "5.2.2",
        "@angular/http": "5.2.2",
        "@angular/platform-browser": "5.2.2",
        "@angular/platform-browser-dynamic": "5.2.2",
        "@angular/router": "5.2.2",
        "@ng-bootstrap/ng-bootstrap": "1.0.0",
        "@ngx-translate/core": "9.1.1",
        "@ngx-translate/http-loader": "2.0.1",
        "@types/jquery": "^3.3.4",
        "angular-split": "1.0.0-rc.1",
        "angular2-uuid": "1.1.1",
        "bootstrap": "4.0.0",
        "classlist.js": "1.1.20150312",
        "core-js": "2.5.3",
        "file-saver": "^2.0.0-rc.4",
        "flag-icon-css": "2.9.0",
        "font-awesome": "4.7.0",
        "jquery": "3.3.1",
        "ng2-dragula": "1.5.0",
        "ngx-cookie": "^3.0.1",
        "popper.js": "1.12.9",
        "reflect-metadata": "0.1.12",
        "rxjs": "5.5.6",
        "typeface-open-sans": "0.0.54",
        "typeface-roboto": "0.0.54",
        "typeface-roboto-mono": "0.0.54",
        "zone.js": "0.8.20"
    },
    "devDependencies": {
        "@biesbjerg/ngx-translate-extract": "2.3.4",
        "@types/file-saver": "^2.0.0",
        "@types/yargs": "^11.0.0",
        "angular2-dependencies-graph": "1.0.0-alpha.12",
        "angular2-template-loader": "0.6.2",
        "autoprefixer": "7.2.5",
        "awesome-typescript-loader": "3.4.1",
        "copy-webpack-plugin": "4.3.1",
        "css-loader": "0.28.9",
        "file-loader": "1.1.6",
        "git-revision-webpack-plugin": "2.5.1",
        "html-loader": "0.5.5",
        "html-webpack-plugin": "2.30.1",
        "license-checker": "16.0.0",
        "loader-utils": "1.1.0",
        "node-sass": "4.9",
        "npm-check-updates": "2.14.0",
        "postcss-loader": "2.0.10",
        "raw-loader": "0.5.1",
        "rimraf": "2.6.2",
        "sass-loader": "6.0.6",
        "string-replace-loader": "1.3.0",
        "style-loader": "0.20.1",
        "tslint": "5.9.1",
        "tslint-loader": "3.5.3",
        "typescript": "2.6.2",
        "uglifyjs-webpack-plugin": "1.1.8",
        "url-loader": "0.6.2",
        "webpack": "3.10.0",
        "webpack-merge": "4.1.1"
    },
    "repository": {}
}
